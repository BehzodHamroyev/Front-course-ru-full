{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "jest",
    "node",
    "react",
    "react-dom",
    "react-router-dom"
  ],
  "include": [
    "config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "..eslintrc.js"
  ]
}